# ===========================================
# CONFIGURATION DE L'APPLICATION DE RÉSERVATION
# ===========================================

# Base de données
DATABASE_URL="file:./dev.db"
# Pour PostgreSQL en production :
# DATABASE_URL="postgresql://username:password@localhost:5432/booking_db"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Sécurité
ADMIN_PASSWORD="change-this-password"
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Email Service (Gmail)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_NAME="Dr. Dubois - Cabinet Médical"

# Google Calendar API
GOOGLE_CALENDAR_CLIENT_ID="your-google-client-id"
GOOGLE_CALENDAR_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALENDAR_REFRESH_TOKEN="your-refresh-token"
GOOGLE_CALENDAR_CALENDAR_ID="primary"

# Telegram Bot (optionnel)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="5"    # 5 réservations par fenêtre

# Monitoring (optionnel)
SENTRY_DSN="your-sentry-dsn"
VERCEL_ANALYTICS_ID="your-analytics-id"

# ===========================================
# INSTRUCTIONS D'INSTALLATION
# ===========================================
# 1. Copiez ce fichier vers .env.local
# 2. Remplissez les valeurs avec vos vraies données
# 3. Ne commitez JAMAIS le fichier .env.local
# 4. Pour Gmail, activez l'authentification à 2 facteurs
#    et générez un mot de passe d'application
# ===========================================
