generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Booking {
  id                    String        @id @default(cuid())
  firstName             String
  lastName              String
  email                 String
  phone                 String
  country               String        @default("FR")
  date                  DateTime
  time                  String
  period                String
  firstConsultation     Boolean       @default(false)
  consultationReason    String
  message               String?
  status                BookingStatus @default(PENDING)
  googleCalendarEventId String?       @unique
  syncedWithGoogle      Boolean       @default(false)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  cancellationToken     String        @unique @default(cuid())

  @@index([date, time])
  @@index([email])
  @@index([status])
  @@index([cancellationToken])
}

model BlockedSlot {
  id        String   @id @default(cuid())
  date      DateTime
  time      String
  reason    String?
  createdAt DateTime @default(now())

  @@unique([date, time])
  @@index([date])
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt

  @@index([key])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
